{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "reflect-metadata"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": ["./types"]
    },
    "exclude": [
        "node_modules"
    ]
}